let className =
  "border-none w-full border-2 border-gray-700 rounded-md bg-gray-900 text-lg \
   text-white p-2 focus:outline-none focus:ring-2 focus:ring-blue-500"

let[@react.component] make ~value ~placeholder ~onChange =
  let onChangeHandler event =
    let target = React.Event.Form.target event in
    onChange target##value
  in
  <input autoFocus=true
         className
         type_="text"
         value
         placeholder
         onChange=onChangeHandler />
